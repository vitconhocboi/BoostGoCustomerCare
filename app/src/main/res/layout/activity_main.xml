<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:gravity="bottom"
        android:paddingHorizontal="5dp"
        android:paddingVertical="7dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bglogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/teko"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            android:text="BoostGo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#1AFA00"
            android:textSize="40dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ivVipReady"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/teko"
            app:layout_constraintBottom_toBottomOf="@id/bglogo"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/bglogo"
            app:layout_constraintEnd_toStartOf="@id/lnSetting"
            android:text="Customer Care"
            android:textColor="#FFF778"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/bglogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_setting" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeActionBar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"
        tools:layout_editor_absoluteX="-138dp"  />
</androidx.constraintlayout.widget.ConstraintLayout>